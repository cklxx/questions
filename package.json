{
  "name": "prompt-template-platform",
  "version": "0.1.0",
  "description": "Local prompt template platform with static JSON templates and simple Node server",
  "main": "src/server.ts",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "NODE_ENV=production bun src/server.ts",
    "start:node": "NODE_ENV=production tsx src/server.ts",
    "build": "cd frontend && bun run build",
    "build:node": "npm --prefix frontend run build",
    "deploy": "scripts/deploy.sh",
    "test:e2e": "bunx --bun playwright test --ui",
    "prepare-assets": "node scripts/prepare-assets.js",
    "postinstall": "node scripts/prepare-assets.js"
  },
  "dependencies": {
    "@babel/standalone": "^7.25.2",
    "express": "^4.19.2",
    "geoip-lite": "^1.4.10",
    "modern-normalize": "^2.0.0",
    "openai": "^6.9.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-react": "^5.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.5.4",
    "vite": "^7.2.4"
  }
}