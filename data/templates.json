            {"key": "target_segment", "label": "目标受众", "type": "textarea", "required": true, "hint": "目标人群画像与场景", "ai_fill": true},
            {"key": "unique_selling_points", "label": "独特卖点", "type": "textarea", "required": true, "hint": "列出 2-3 个 USP", "ai_fill": true},
            {"key": "hero_offer", "label": "核心优惠/权益", "type": "textarea", "required": false, "hint": "如预约礼、以旧换新、延保", "ai_fill": true},
            {"key": "channel_plan", "label": "渠道组合与节奏", "type": "textarea", "required": true, "hint": "按阶段列出投放/自有渠道", "ai_fill": true},
            {"key": "milestones", "label": "30 天里程碑", "type": "textarea", "required": true, "hint": "列出关键日期与交付物", "ai_fill": true},
            {"key": "max_length", "label": "长度上限", "type": "number", "required": false, "hint": "整体字数控制", "default": 800, "constraints": {"min": 400, "max": 1200}, "ai_fill": false}
          ],
          "controls": [
            {"key": "max_length", "label": "长度", "type": "number", "control_type": "length"},
            {"key": "channel_plan", "label": "渠道节奏", "type": "textarea", "control_type": "structure"}
          ],
          "evaluation_rules": {
            "auto_checks": ["正文不超过 max_length 字"],
            "manual_checklist": [
              "目标受众痛点是否明确可验证？",
              "USP 是否可感知、可量化？",
              "里程碑是否包含日期、负责人、产出物？"
            ]
          },
          "tags": ["上市规划", "战役简报", "nano banana pro"],
          "example_inputs": [
            {
              "name": "轻薄耐摔定位的 30 天战役",
              "placeholder_values": {
