{
  "version": "0.2.0",
  "categories": [
    {
      "id": "text2text",
      "name": "高效文案/决策",
      "description": "极致浓缩的文字模版，直接输出决策、执行与复盘",
      "templates": [
        {
          "id": "T1_decision_canvas",
          "name": "秒读决策画布",
          "short_description": "一屏读懂决策：目标/信号/选项/推荐/72 小时动作。",
          "category_id": "text2text",
          "prompt_template": "以「{{decision_owner}}」的视角，针对 {{topic}} 写一份 1 页决策画布。结构：1) 目标与硬约束（限 {{word_limit}} 字，用 bullets） 2) 关键信号（数据或事实） 3) 3 个可行选项：收益 / 成本 / 风险 4) 推荐方案 + 最强反对意见 5) 72 小时内的 3 个动作。语气 {{tone}}，输出用中英文小标题。",
          "placeholders": [
            {
              "key": "topic",
              "label": "决策主题",
              "type": "string",
              "required": true,
              "hint": "要解决的核心问题",
              "ai_fill": true
            },
            {
              "key": "decision_owner",
              "label": "决策人",
              "type": "string",
              "required": true,
              "hint": "负责拍板的人或角色",
              "default": "Owner",
              "ai_fill": true
            },
            {
              "key": "tone",
              "label": "语气",
              "type": "enum",
              "required": true,
              "hint": "输出调性",
              "enum_options": [
                "硬核决策",
                "极简理性",
                "鼓舞团队"
              ],
              "default": "硬核决策",
              "ai_fill": false
            },
            {
              "key": "word_limit",
              "label": "文字上限",
              "type": "number",
              "required": false,
              "hint": "画布正文字数限制",
              "default": 180,
              "constraints": {
                "min": 80,
                "max": 280
              },
              "ai_fill": false
            }
          ],
          "controls": [
            {
              "key": "tone",
              "label": "语气",
              "type": "enum",
              "control_type": "style"
            },
            {
              "key": "word_limit",
              "label": "长度",
              "type": "number",
              "control_type": "length"
            }
          ],
          "evaluation_rules": {
            "auto_checks": [
              "正文不超过 word_limit 字",
              "必须列出 3 个选项并给出推荐"
            ],
            "manual_checklist": [
              "推荐方案是否基于关键信号，而非直觉？",
              "反对意见是否具体且可验证？",
              "72 小时行动是否可直接执行、可度量？"
            ]
          },
          "tags": [
            "决策",
            "短平快",
            "行动导向"
          ],
          "example_inputs": [
            {
              "name": "新品定价决策",
              "placeholder_values": {
                "topic": "新品 A 的首发定价策略",
                "decision_owner": "产品线 VP",
                "tone": "硬核决策",
                "word_limit": 180
              },
              "notes": "强调信号与行动并行"
            }
          ]
        },
        {
          "id": "T2_lightning_brief",
          "name": "闪电 Brief → 交付",
          "short_description": "压缩碎片信息成可执行 brief + checklist。",
          "category_id": "text2text",
          "prompt_template": "为交付物 {{deliverable}} 写一份闪电 brief。输入素材：{{raw_notes}}。受众 {{audience}}，必须包含成品标准：{{definition_of_done}}，限制条件：{{constraints}}。输出：1) 3 行概要 2) 成品要素检查清单 3) 风格 / 禁忌 4) 负责人与截止时间预留位。",
          "placeholders": [
            {
              "key": "deliverable",
              "label": "交付物",
              "type": "string",
              "required": true,
              "hint": "要产出的具体东西",
              "ai_fill": true
            },
            {
              "key": "raw_notes",
              "label": "素材",
              "type": "textarea",
              "required": true,
              "hint": "零散信息、想法、背景",
              "ai_fill": true
            },
            {
              "key": "audience",
              "label": "受众",
              "type": "enum",
              "required": true,
              "hint": "谁会阅读/执行",
              "enum_options": [
                "高层决策",
                "工程团队",
                "市场团队",
                "运营"
              ],
              "default": "工程团队",
              "ai_fill": true
            },
            {
              "key": "definition_of_done",
              "label": "完成标准",
              "type": "textarea",
              "required": true,
              "hint": "成品必须满足什么",
              "ai_fill": false
            },
            {
              "key": "constraints",
              "label": "限制条件",
              "type": "string",
              "required": false,
              "hint": "时间 / 预算 / 渠道等约束",
              "default": "本周内完成",
              "ai_fill": true
            }
          ],
          "controls": [
            {
              "key": "audience",
              "label": "受众",
              "type": "enum",
              "control_type": "audience"
            },
            {
              "key": "constraints",
              "label": "限制",
              "type": "string",
              "control_type": "safety"
            }
          ],
          "evaluation_rules": {
            "auto_checks": [
              "概要部分不超过 3 行",
              "Checklist 覆盖交付物的关键要素"
            ],
            "manual_checklist": [
              "完成标准是否可验收、可度量？",
              "有无明确的禁忌或风险提醒？",
              "受众是否能一眼执行？"
            ]
          },
          "tags": [
            "Brief",
            "执行力",
            "高信噪"
          ],
          "example_inputs": [
            {
              "name": "登录页面改版 Brief",
              "placeholder_values": {
                "deliverable": "移动端登录页 UI & 文案",
                "raw_notes": "现有转化 12%，需要提高到 20%；必须兼容 SSO；品牌语调冷静克制；文案需要更轻量；线框已有初稿。",
                "audience": "工程团队",
                "definition_of_done": "上线后 7 天内转化率提升到 18% 以上；兼容 SSO 与手机号登录；文案通过品牌审校；性能指标保持 TTFB < 200ms。",
                "constraints": "一周内上线灰度"
              },
              "notes": "突出完成标准与禁忌"
            }
          ]
        },
        {
          "id": "T3_red_team_review",
          "name": "红队快速反驳",
          "short_description": "生成最尖锐的反对论点与修复动作，避免盲点。",
          "category_id": "text2text",
          "prompt_template": "作为红队，针对方案：{{plan_summary}}，在 {{context}} 场景下提出最尖锐的反驳和修复建议。输出：① 反驳理由 3 条，每条含潜在后果 ② 需补充的证据 ③ 立即可做的修补动作（限 {{action_limit}} 项）。语气 {{tone}}，禁止客套。",
          "placeholders": [
            {
              "key": "plan_summary",
              "label": "方案摘要",
              "type": "textarea",
              "required": true,
              "hint": "当前方案或策略的核心内容",
              "ai_fill": true
            },
            {
              "key": "context",
              "label": "使用场景",
              "type": "string",
              "required": true,
              "hint": "目标用户、资源或约束",
              "ai_fill": true
            },
            {
              "key": "tone",
              "label": "语气",
              "type": "enum",
              "required": true,
              "hint": "反驳的风格",
              "enum_options": [
                "冷静客观",
                "无情吐槽",
                "数据驱动"
              ],
              "default": "冷静客观",
              "ai_fill": false
            },
            {
              "key": "action_limit",
              "label": "修补动作数",
              "type": "number",
              "required": false,
              "hint": "要列出的修补动作数量上限",
              "default": 3,
              "constraints": {
                "min": 2,
                "max": 6
              },
              "ai_fill": false
            }
          ],
          "controls": [
            {
              "key": "tone",
              "label": "风格",
              "type": "enum",
              "control_type": "style"
            },
            {
              "key": "action_limit",
              "label": "动作数",
              "type": "number",
              "control_type": "structure"
            }
          ],
          "evaluation_rules": {
            "auto_checks": [
              "必须给出反驳与潜在后果",
              "修补动作数量不超过 action_limit"
            ],
            "manual_checklist": [
              "反驳是否命中关键假设而非细枝末节？",
              "修补动作是否可立刻执行？",
              "建议是否含可验证的证据指引？"
            ]
          },
          "tags": [
            "红队",
            "风险控制",
            "质疑假设"
          ],
          "example_inputs": [
            {
              "name": "增长实验红队",
              "placeholder_values": {
                "plan_summary": "计划在首页弹出优惠券吸引新用户下单，目标提升首单转化 5%。",
                "context": "预算有限；主要用户为一二线城市 25-35 岁；需符合合规要求。",
                "tone": "数据驱动",
                "action_limit": 3
              },
              "notes": "关注合规与用户体验风险"
            }
          ]
        }
      ]
    },
    {
      "id": "text2artifact",
      "name": "结构化产物",
      "description": "高信噪比的系统提示、测试矩阵等结构化输出",
      "templates": [
        {
          "id": "P1_system_prompt_blueprint",
          "name": "Agent 系统提示蓝图",
          "short_description": "最小而完整的系统提示：角色、流程、拒绝清单、输出格式。",
          "category_id": "text2artifact",
          "prompt_template": "为一个 {{agent_type}} Agent 生成系统提示蓝图。使命：{{mission}}。可用工具：{{tools}}。护栏：{{guardrails}}。要求：输出角色设定、输入解析流程、拒绝清单、输出格式示例，限制在 {{tokens_limit}} tokens 内，语气 {{output_style}}。",
          "placeholders": [
            {
              "key": "agent_type",
              "label": "Agent 类型",
              "type": "string",
              "required": true,
              "hint": "如：数据分析助手、代码巡检员",
              "ai_fill": true
            },
            {
              "key": "mission",
              "label": "使命",
              "type": "textarea",
              "required": true,
              "hint": "Agent 要完成的核心任务",
              "ai_fill": true
            },
            {
              "key": "tools",
              "label": "可用工具",
              "type": "textarea",
              "required": false,
              "hint": "可调用的 API、函数或限制",
              "ai_fill": true
            },
            {
              "key": "guardrails",
              "label": "护栏",
              "type": "textarea",
              "required": false,
              "hint": "要避免的行为、隐私或合规限制",
              "ai_fill": true
            },
            {
              "key": "output_style",
              "label": "输出风格",
              "type": "enum",
              "required": true,
              "hint": "系统提示的表达方式",
              "enum_options": [
                "结构化分段",
                "表格 + 要点",
                "极简步骤",
                "审计口吻"
              ],
              "default": "结构化分段",
              "ai_fill": false
            },
            {
              "key": "tokens_limit",
              "label": "Token 上限",
              "type": "number",
              "required": false,
              "hint": "系统提示长度控制",
              "default": 600,
              "constraints": {
                "min": 200,
                "max": 1200
              },
              "ai_fill": false
            }
          ],
          "controls": [
            {
              "key": "output_style",
              "label": "风格",
              "type": "enum",
              "control_type": "style"
            },
            {
              "key": "tokens_limit",
              "label": "长度",
              "type": "number",
              "control_type": "length"
            },
            {
              "key": "guardrails",
              "label": "护栏",
              "type": "textarea",
              "control_type": "safety"
            }
          ],
          "evaluation_rules": {
            "auto_checks": [
              "输出包含角色/流程/拒绝/格式四部分",
              "控制在 tokens_limit 内"
            ],
            "manual_checklist": [
              "拒绝清单是否覆盖高风险输入？",
              "流程是否明确输入解析 → 推理 → 输出？",
              "格式示例是否可直接复制使用？"
            ]
          },
          "tags": [
            "系统提示",
            "Agent",
            "安全护栏"
          ],
          "example_inputs": [
            {
              "name": "代码审计 Agent",
              "placeholder_values": {
                "agent_type": "Web 安全代码巡检员",
                "mission": "审查前端与 Node 服务的代码片段，定位安全漏洞并给出修复建议。",
                "tools": "可读取代码片段，查询内部安全基线文档。",
                "guardrails": "不得输出真实凭据、不得执行代码、禁止凭空编造 API。",
                "output_style": "表格 + 要点",
                "tokens_limit": 700
              }
            }
          ]
        },
        {
          "id": "P2_extreme_test_matrix",
          "name": "极限测试矩阵",
          "short_description": "给出高风险用例、破坏性输入与可观测信号的清晰表。",
          "category_id": "text2artifact",
          "prompt_template": "为功能 {{feature}} 在 {{platform}} 生成极限测试矩阵。关键流程：{{critical_flows}}。风险重心：{{risk_focus}}。限制条件：{{constraints}}。输出优先级排序的 {{case_depth}} 个用例：用例描述、破坏性输入、预期结果、可观测信号 {{success_signal}}。语气直接给出结论，不讲概念。",
          "placeholders": [
            {
              "key": "feature",
              "label": "功能",
              "type": "string",
              "required": true,
              "hint": "要测试的功能或场景",
              "ai_fill": true
            },
            {
              "key": "critical_flows",
              "label": "关键流程",
              "type": "textarea",
              "required": true,
              "hint": "核心用户流程或接口调用",
              "ai_fill": true
            },
            {
              "key": "platform",
              "label": "平台",
              "type": "enum",
              "required": true,
              "hint": "运行环境",
              "enum_options": [
                "Web",
                "Mobile",
                "API",
                "数据管道"
              ],
              "default": "Web",
              "ai_fill": false
            },
            {
              "key": "risk_focus",
              "label": "风险重心",
              "type": "enum",
              "required": true,
              "hint": "优先关注的风险类型",
              "enum_options": [
                "稳定性",
                "安全",
                "性能",
                "兼容性"
              ],
              "default": "稳定性",
              "ai_fill": true
            },
            {
              "key": "constraints",
              "label": "限制",
              "type": "string",
              "required": false,
              "hint": "如数据不可出公网、时间有限等",
              "ai_fill": true
            },
            {
              "key": "case_depth",
              "label": "用例数量",
              "type": "number",
              "required": false,
              "hint": "需要覆盖的用例数",
              "default": 12,
              "constraints": {
                "min": 6,
                "max": 20
              },
              "ai_fill": false
            },
            {
              "key": "success_signal",
              "label": "可观测信号",
              "type": "string",
              "required": false,
              "hint": "如何观测成功或失败",
              "ai_fill": true
            }
          ],
          "controls": [
            {
              "key": "platform",
              "label": "平台",
              "type": "enum",
              "control_type": "structure"
            },
            {
              "key": "risk_focus",
              "label": "风险",
              "type": "enum",
              "control_type": "style"
            },
            {
              "key": "case_depth",
              "label": "深度",
              "type": "number",
              "control_type": "length"
            }
          ],
          "evaluation_rules": {
            "auto_checks": [
              "用例数量不超过 case_depth",
              "每条用例包含预期与可观测信号"
            ],
            "manual_checklist": [
              "是否覆盖高风险与边界输入？",
              "破坏性输入是否具体、可复现？",
              "可观测信号是否可监控或记录？"
            ]
          },
          "tags": [
            "测试矩阵",
            "质量",
            "风险优先"
          ],
          "example_inputs": [
            {
              "name": "支付流程极限测试",
              "placeholder_values": {
                "feature": "移动端支付 + 优惠券 + 指纹支付",
                "critical_flows": "下单 -> 优惠叠加 -> 支付网关 -> 通知回调 -> 订单落库",
                "platform": "Mobile",
                "risk_focus": "稳定性",
                "constraints": "沙箱环境，无真实扣款",
                "case_depth": 10,
                "success_signal": "日志无错误码、订单状态一致、指标 QPS 稳定"
              },
              "notes": "需要破坏性输入（断网、慢请求、金额异常等）"
            }
          ]
        }
      ]
    },
    {
      "id": "text2image",
      "name": "视觉提案",
      "description": "低饱和、可落地的视觉提示模版",
      "templates": [
        {
          "id": "I1_brand_story_triptych",
          "name": "品牌故事三联画",
          "short_description": "同一视觉语言下的三幅场景提示，保持风格一致。",
          "category_id": "text2image",
          "prompt_template": "为品牌 {{brand_name}} 生成三联画视觉提示，主主题 {{hero_story}}。统一的视觉语言：{{visual_style}}，色调 {{palette}}，镜头感 {{camera_style}}，光线 {{lighting}}，画幅 {{aspect_ratio}}。三幅场景：1) {{scene_one}} 2) {{scene_two}} 3) {{scene_three}}。强调留白，品牌标识轻量出现，整体低饱和。",
          "placeholders": [
            {
              "key": "brand_name",
              "label": "品牌名",
              "type": "string",
              "required": true,
              "hint": "要呈现的品牌或产品线",
              "ai_fill": true
            },
            {
              "key": "hero_story",
              "label": "核心故事",
              "type": "string",
              "required": true,
              "hint": "一句话概括品牌故事",
              "ai_fill": true
            },
            {
              "key": "visual_style",
              "label": "视觉风格",
              "type": "enum",
              "required": true,
              "hint": "整体艺术风格",
              "enum_options": [
                "日系胶片",
                "极简北欧",
                "柔和科技感",
                "插画海报感"
              ],
              "default": "柔和科技感",
              "ai_fill": false
            },
            {
              "key": "palette",
              "label": "色调",
              "type": "string",
              "required": false,
              "hint": "低饱和主色，如：浅灰、雾蓝、淡杏",
              "default": "浅灰、雾蓝、淡杏",
              "ai_fill": true
            },
            {
              "key": "camera_style",
              "label": "镜头感",
              "type": "enum",
              "required": true,
              "hint": "画面构图与景别",
              "enum_options": [
                "平视定焦",
                "35mm 纪实",
                "远景留白",
                "航拍俯视"
              ],
              "default": "平视定焦",
              "ai_fill": false
            },
            {
              "key": "lighting",
              "label": "光线",
              "type": "enum",
              "required": true,
              "hint": "光照氛围",
              "enum_options": [
                "柔光无阴影",
                "薄暮逆光",
                "雾面环境光",
                "晨间斜光"
              ],
              "default": "柔光无阴影",
              "ai_fill": false
            },
            {
              "key": "aspect_ratio",
              "label": "画幅比例",
              "type": "enum",
              "required": false,
              "hint": "输出画幅",
              "enum_options": [
                "16:9",
                "1:1",
                "3:4",
                "9:16"
              ],
              "default": "16:9",
              "ai_fill": false
            },
            {
              "key": "scene_one",
              "label": "场景一",
              "type": "string",
              "required": true,
              "hint": "第 1 幅画面",
              "ai_fill": true
            },
            {
              "key": "scene_two",
              "label": "场景二",
              "type": "string",
              "required": true,
              "hint": "第 2 幅画面",
              "ai_fill": true
            },
            {
              "key": "scene_three",
              "label": "场景三",
              "type": "string",
